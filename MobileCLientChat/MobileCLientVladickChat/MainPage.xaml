<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileCLientChat.MainPage">

    <StackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
        </Grid>

        <Editor x:Name="Log" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" IsReadOnly="True" HeightRequest="400"></Editor>
        <Entry  x:Name="EntryMes" Grid.Row="3" Grid.Column="0"></Entry>
        <Button x:Name="SendButton" Text="Send" Grid.Column="0" Grid.Row="4" Clicked="SendButton_Clicked"></Button>
        <Button x:Name="RefreshButton" Text="R" Grid.Row="5" Grid.Column="1"  Clicked="RefreshButton_Clicked"></Button>



    </StackLayout>

</ContentPage>
